<!DOCTYPE html>
<htmlng ng-app='vlogApp'>
<head>
  <title>Lowell Mower || Tech, History, Reubens</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <meta name="description" content="A vlog dedicated to technology, history, and the quest for the perfect rueben sammich, who doesn't like sammichez? Screen casts and tutorials are simply a by-product of documenting the journey." />
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
</head>
<body>

<%= flash_messages %>

<!-- Navigation -->
<nav class="navbar-custom navbar-transparent">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header page-scroll">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"><p style="font-size: 25px;" class="glyphicon glyphicon-sunglasses"></p></span>
      </button>
      <a href="/"><%= image_tag('logo', size: '60') %></a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to 'about', about_path %>
        </li>
        <li>
          <%= link_to 'app-a-day', apps_path %>
        </li>
        <% if admin_signed_in? %>
          <li><%= link_to 'admin logout', destroy_admin_session_path, method: 'delete' %></li>
          <li><%= link_to 'new post', new_post_path %></li>
        <% elsif user_signed_in? %>
          <li><%= link_to 'user logout', destroy_user_session_path, method: 'delete' %></li>
        <% end  %>
        <li>
          <%= link_to 'contact' %>
        </li>
        <li>
          <%= link_to 'log in', new_user_session_path %>
        </li>
        <li>
          <%= link_to 'sign up', new_user_registration_path %>
        </li>
        <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input type="text" class="form-control" ng-model="query"placeholder="Filter Videos">
          </div>
        </form>
      </ul>
    </div>
    <!-- /.navbar-collapse -->
  </div>
  <!-- /.container -->
</nav>

<%= yield %>


<!-- <script src="js/clean-blog.min.js"></script> -->

</body>
</html>
