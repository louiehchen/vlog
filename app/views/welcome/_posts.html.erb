<ul id="post-list">
  <li ng-repeat='post in posts | filter:query'>
    <div class="row">
      <div class="col-sm-2 col-sm-offset-1" id="post-img">
        <%= image_tag('placeholder', size: '125x125', alt: 'placeholder', :class => 'img-circle')%>
      </div>
      <div class="col-sm-8">
        <div class="post-preview">
          <a href="/posts/{{post.id}}">
            <h2 class="post-title">{{post.title}}</h2>
            <h4 class="post-subtitle">{{post.description | limitTo: 140}}...</h4>
          </a>
            <p class="post-meta">Posted under: <a href="#">POST CATEGORY</a> posted on: {{post.created_at | date: "MM-dd-yyyy"}}</p>
        </div>
        <hr>
      </div>
    </div>
  </li>
</ul>