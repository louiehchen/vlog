<div class="container">
  <div class="container" id="app-texty-title">
    <h1>Hello VoIP!</h1>
  </div>

<% if flash[:notice] %>
  <div class="container">
    <%= flash_messages %>
  </div>
<% end %>

  <div class="container" id="app-texty-form">
    <%= form_for @phone, url: '/apps/voip/make_call' do |f| %>
    <%= f.label :number, 'Enter Your Phone Number' %>
    <%= f.telephone_field :number, class: 'form-control', placeholder: '###-###-####' %><br>
    <%= f.submit 'Call Me!', class: 'btn btn-primary' %>
    <% end %>
  </div>

  <div class="container navbar-fixed-bottom" id="app-texty-footer">
    <p>*please note that your phone number will not be shared, or sold by this application nor any other party, it is only used for the purposes of this exercise</p>
  </div>
</div>